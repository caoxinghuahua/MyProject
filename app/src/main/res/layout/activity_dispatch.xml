<?xml version="1.0" encoding="utf-8"?>
<com.example.caoxinghua.myapplication.dispatch.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button2" />
    <com.example.caoxinghua.myapplication.dispatch.MyFlowView
        android:id="@+id/myFlowView"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/sub_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试啊"/>
        <TextView
            android:id="@+id/sub_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试啊测试测试测试测试"/>
        <TextView
            android:id="@+id/sub_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试啊测试测试"/>
        <TextView
            android:id="@+id/sub_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试啊测试测试测试啊测试测试"/>
    </com.example.caoxinghua.myapplication.dispatch.MyFlowView>
    
    <ViewStub
        android:id="@+id/vs"
        android:inflatedId="@+id/vs_layout"
        android:layout="@layout/activity_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
     <include
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         layout="@layout/layout_merger"/>
</com.example.caoxinghua.myapplication.dispatch.MyLayout>
