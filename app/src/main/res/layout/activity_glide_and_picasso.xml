<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.caoxinghua.myapplication.glideAndPicasso.GlideAndPicassoActivity">
    <ImageView
        android:id="@+id/glide_iv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/picasso_iv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glide_iv"
        android:visibility="gone"/>
     <LinearLayout
         android:id="@+id/testView"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone"/>
     <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/frescoView"
         android:layout_width="300dp"
         android:layout_height="300dp"
         fresco:roundedCornerRadius="5dp"
         fresco:failureImage="@mipmap/icon"/>
</LinearLayout>
