<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_def_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.example.caoxinghua.myapplication.defview.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/flowLayout"
        app:horizontial_spacing="5dp"
        app:vertical_spacing="5dp">

    </com.example.caoxinghua.myapplication.defview.FlowLayout>
    <com.example.caoxinghua.myapplication.defview.MyViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flowLayout">
        <com.example.caoxinghua.myapplication.defview.MyView
            android:id="@+id/myView"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#cccccc"
           />
    </com.example.caoxinghua.myapplication.defview.MyViewGroup>

</RelativeLayout>
